<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net472;netstandard2.0</TargetFrameworks>
    <RootNamespace>Connect.Koi</RootNamespace>
    <AssemblyName>Connect.Koi</AssemblyName>
    <AssemblyVersion>03.00.00</AssemblyVersion>
    <FileVersion>03.00.00.0</FileVersion>
    <Version>03.00.00</Version>
    <!-- Deterministic=False is necessary, so the version-number can contain an *-->
    <Deterministic>False</Deterministic>
    <Copyright>Copyright (MIT) 2022 2sic</Copyright>
  </PropertyGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'netstandard2.0'">
    <PackageReference Include="Microsoft.AspNetCore.Html.Abstractions">
      <Version>2.0.0</Version>
    </PackageReference>
    <PackageReference Include="Microsoft.AspNetCore.Http">
      <Version>2.0.0</Version>
    </PackageReference>
    <PackageReference Include="Microsoft.AspNetCore.Http.Abstractions">
      <Version>2.0.0</Version>
    </PackageReference>
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'net451'">
    <Reference Include="System.Web" />
    <Reference Include="System.Web.Abstractions" />
  </ItemGroup>

</Project>
